<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:padding="10dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/notes_viewholder_outline"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/subject_type_tf"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/day_tf"
        app:layout_constraintBottom_toTopOf="@id/professor_tf"
        android:text="@string/title_str" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/professor_tf"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/subject_type_tf"
        app:layout_constraintBottom_toTopOf="@id/classroom_tf"
        android:text="@string/body_str" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/classroom_tf"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/professor_tf"
        app:layout_constraintBottom_toTopOf="@id/groups_tf"
        android:text="@string/body_str" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/groups_tf"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/classroom_tf"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/body_str" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/day_tf"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/subject_type_tf"
        android:textAlignment="viewEnd"
        android:text="@string/body_str" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/time_tf"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/professor_tf"
        android:text="@string/body_str" />


</androidx.constraintlayout.widget.ConstraintLayout>